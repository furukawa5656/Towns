$.fn.raty.defaults.half = false;
$.fn.raty.defaults.halfShow = true;
$.fn.raty.defaults.path = "/assets";
$.fn.raty.defaults.cancel = false;

$(function(){
  $(".star").each(function() {
    var $readonly = ($(this).attr('data-readonly') == 'true');
    var $half     = ($(this).attr('data-enable-half') == 'true');
    var $halfShow = ($(this).attr('data-half-show') == 'true');
    var $single   = ($(this).attr('data-single') == 'true');
    $(this).raty({
      score: function() {
        return $(this).attr('data-rating')
      },
      number: function() {
        return $(this).attr('data-star-count')
      },
      half:        $half,
      halfShow:    $halfShow,
      single:      $single,
      path:        $(this).attr('star-path.png'),
      starOn:      $(this).attr('star-on.png'),
      starOff:     $(this).attr('star-off.png'),
      starHalf:    $(this).attr('star-half.png'),
      cancel:      $(this).attr('cancel.png'),
      cancelPlace: $(this).attr('cancel-place.png'),
      cancelHint:  $(this).attr('cancel-hint.png'),
      cancelOn:    $(this).attr('cancel-on.png'),
      cancelOff:   $(this).attr('cancel-off.png'),
      noRatedMsg:  $(this).attr('no-rated-message.png'),
      round:       $(this).attr('round.png'),
      space:       $(this).attr('space.png'),
      target:      $(this).attr('target.png'),
      targetText:  $(this).attr('target-text.png'),
      targetType:  $(this).attr('target-type.png'),
      targetFormat: $(this).attr('target-format.png'),
      targetScoret: $(this).attr('target-score.png'),
      readOnly: $readonly,
      click: function(score, evt) {
        var _this = this;
        if (score == null) { score = 0; }
        $.post('<%= Rails.application.class.routes.url_helpers.rate_path %>',
        {
          score: score,
          dimension: $(this).attr('data-dimension'),
          id: $(this).attr('data-id'),
          klass: $(this).attr('data-classname')
        },
        function(data) {
          if(data) {
            // success code goes here ...

            if ($(_this).attr('data-disable-after-rate') == 'true') {
              $(_this).raty('set', { readOnly: true, score: score });
            }
          }
        });
      }
    });
  });
});
