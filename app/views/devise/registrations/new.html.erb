<div class="col-lg-2"></div>
<div class="col-lg-8">
  <h2>ユーザー情報登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <table class="table">
      <tbody>
        <tr>
          <td><%= f.label :ニックネーム %></td>
          <td><%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %></td>
        </tr>
        <tr>
          <td><%= f.label :性別 %></td>
          <td>
            <%= f.label :男性  %>
            <%= f.radio_button :gender, :man %>
            　<%= f.label :女性  %>
            <%= f.radio_button :gender, :woman %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :年代 %></td>
          <td><%= f.select :age_group, User.age_groups_i18n.invert, {prompt: "--選択してください"} %></td>
        </tr>
        <tr>
          <td><%= f.label :生活スタイル %></td>
          <td><%= f.select :family_structure, User.family_structures_i18n.invert, {prompt: "--選択してください"} %></td>
        </tr>
        <tr>
          <td><%= f.label :email %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td>
            <%= f.label :パスワード %><span>(6文字以上)</span>
            <% if @minimum_password_length %>
            <% end %>
          </td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td><%= f.label :パスワード確認用 %></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </tbody>
    </table>
    <div class="actions regi">
      <div><%= f.submit "登録" %></div>
      <div><%= render "devise/shared/links" %></div>
    </div>
  <% end %>
</div>
<div class="col-lg-2"></div>




