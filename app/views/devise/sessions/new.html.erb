<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <h2>ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table">
          <tbody>
            <tr>
              <td><%= f.label :email %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td><%= f.label :パスワード %></td>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
          </tbody>
        </table>
        <div class="actions log">
          <div><%= f.submit "OK" %></div>
          <div><%= f.label :自動ログイン %><span><%= f.check_box :remember_me %></span></div>
        </div>
      <% end %>
      <div class="log_link">
        <div><%= render "devise/shared/links" %></div>
      </div>
    </div>

        <div class="col-lg-2"></div>
        </div>
    </div>
</div>

